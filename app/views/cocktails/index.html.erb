<h1>Cocktails:</h1>
<p><%= link_to "New cocktail", new_cocktail_path %></p>
<% @cocktails.each do |cocktail|%>
  <p><%=cocktail.name%> ||
  <%= link_to "Show", cocktail_path(cocktail) %> |
  <%= link_to "Delete", cocktail_path(cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %> ||
  </p>
<% end %>
