<div class="text-center">
  <h1>My cocktail</h1>
  <%= image_tag @cocktail.picture.url(:large) %>
  <h2><%=@cocktail.name%></h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to 'Delete dose', cocktail_dose_path(@cocktail, dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %></li>
    <% end %>
  </ul>

  <p><%= link_to 'Add ingredient',
    new_cocktail_dose_path(@cocktail),
    {class: "btn btn-primary"} %></p>
  <p><%= link_to 'All cocktails',
    root_path,
    {class: "btn btn-primary"} %></p>
</div>

