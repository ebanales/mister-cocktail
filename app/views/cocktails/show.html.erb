<h1>My cocktail</h1>
<h2><%=@cocktail.name%></h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %></li>
  <% end %>
</ul>

<p><%= link_to 'Add ingredient',
  new_cocktail_dose_path(@cocktail),
  {class: "btn btn-primary"} %></p>
<p><%= link_to 'All cocktails',
  root_path,
  {class: "btn btn-primary"} %></p>
